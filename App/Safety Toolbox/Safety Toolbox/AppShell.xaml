<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Safety_Toolbox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Safety_Toolbox"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="ToolBox Talk"
        ContentTemplate="{DataTemplate local:Toolbox_Talk}"
        Route="ToolBox_Talk" />

</Shell>
