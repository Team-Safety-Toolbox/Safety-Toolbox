<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safety_Toolbox.Pages.ReportSettings"
             Title=" ">
    <VerticalStackLayout>
        <Label
             Text="Report Settings"
             SemanticProperties.HeadingLevel="Level1"
             FontSize="32"
             HorizontalOptions="Center" />
        
        <HorizontalStackLayout HorizontalOptions="Center">
            <CheckBox x:Name="ParentCheckBox" CheckedChanged="OnCheckBoxCheckedChanged"/>
            <Label Text="Send Reports to my email"  VerticalOptions="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <CheckBox x:Name="FirstCheckBox" CheckedChanged="OnCheckBoxCheckedChanged"/>
            <Label Text="On the 1st of the month"  VerticalOptions="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <CheckBox x:Name="FifteenthCheckBox" CheckedChanged="OnCheckBoxCheckedChanged"/>
            <Label Text="On the 15th of the month" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>